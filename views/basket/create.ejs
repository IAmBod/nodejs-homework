<%- layout('/layout/layout') %>

<div class="container">
    <div class="row title">
        <div class="col title">Kosár létrehozás</div>
    </div>
    <form method="POST" action="/baskets/create">
        <div class="row content">
            <div class="col">
                <div class="form-group">
                    <label>Név</label>
                    <input name="name" type="text" class="form-control">
                </div>
                <div class="form-group">
                    <label for="name">Méret</label>
                    <select id="name" name="size" class="form-control">
                        <% Sizes.forEach(function (size) { %>
                            <option value="<%= size.code %>"><%= size.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="material">Anyag</label>
                    <select id="material" name="material" class="form-control">
                        <% Materials.forEach(function (material) { %>
                            <option value="<%= material.code %>"><%= material.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="color">Szín</label>
                    <select id="color" name="color" class="form-control">
                        <% Colors.forEach(function (color) { %>
                            <option value="<%= color.code %>"><%= color.name %></option>
                        <% }); %>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary float-right">Létrehoz</button>
            </div>
        </div>
    </form>
</div>